<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true"/>
	<package name="whiteblog" extends="struts-default" namespace="/">
		<action name="login" class="LoginAction" method="execute">
			<result name="success">/success.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="register" class="RegisterAction" method="execute">
			<result name="success">/success.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="content" class="BlogContent">
			<result name="success" >./success.jsp</result>
			<result name="fail">./404.html</result>
		</action>
		<action name="searchAriticle" class="SearchArticleAction" method="execute">
			<result name="success">/success.jsp</result>
			<result name="error">/404.html</result>
		</action>
		<action name="ShowBlogList" class="ShowBlogListAction" method="execute">
			<result name="success">/index.jsp</result>
			<result name="error">/index.jsp</result>
		</action>
	</package>


</struts>    
